{
  "designSystem": {
    "name": "WriteAway Design Language",
    "version": "1.0.0",
    "colors": {
      "primary": {
        "purple": "#7C3AED",
        "purpleLight": "#A855F7",
        "purpleDark": "#6D28D9",
        "gradient": "linear-gradient(135deg, #7C3AED 0%, #A855F7 50%, #EC4899 100%)"
      },
      "background": {
        "primary": "#FFFFFF",
        "secondary": "#F8FAFC",
        "overlay": "rgba(255, 255, 255, 0.95)",
        "gradient": "linear-gradient(135deg, #7C3AED 0%, #A855F7 30%, #EC4899 70%, #F472B6 100%)"
      },
      "text": {
        "primary": "#1E293B",
        "secondary": "#64748B",
        "tertiary": "#94A3B8",
        "inverse": "#FFFFFF",
        "accent": "#7C3AED"
      },
      "ui": {
        "border": "#E2E8F0",
        "borderLight": "#F1F5F9",
        "shadow": "rgba(0, 0, 0, 0.1)",
        "hover": "#F8FAFC",
        "active": "#F1F5F9"
      }
    },
    "typography": {
      "fontFamily": {
        "primary": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
        "secondary": "Inter, -apple-system, BlinkMacSystemFont, sans-serif"
      },
      "fontSize": {
        "xs": "0.75rem",
        "sm": "0.875rem",
        "base": "1rem",
        "lg": "1.125rem",
        "xl": "1.25rem",
        "2xl": "1.5rem",
        "3xl": "1.875rem",
        "4xl": "2.25rem",
        "5xl": "3rem",
        "6xl": "3.75rem"
      },
      "fontWeight": {
        "normal": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700
      },
      "lineHeight": {
        "tight": 1.25,
        "normal": 1.5,
        "relaxed": 1.625
      }
    },
    "spacing": {
      "xs": "0.25rem",
      "sm": "0.5rem",
      "md": "1rem",
      "lg": "1.5rem",
      "xl": "2rem",
      "2xl": "3rem",
      "3xl": "4rem",
      "4xl": "6rem",
      "5xl": "8rem"
    },
    "borderRadius": {
      "sm": "0.25rem",
      "md": "0.375rem",
      "lg": "0.5rem",
      "xl": "0.75rem",
      "2xl": "1rem",
      "full": "9999px"
    },
    "shadows": {
      "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
      "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
      "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
      "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)",
      "inner": "inset 0 2px 4px 0 rgba(0, 0, 0, 0.06)"
    },
    "components": {
      "hero": {
        "background": "linear-gradient(135deg, #7C3AED 0%, #A855F7 30%, #EC4899 70%, #F472B6 100%)",
        "textColor": "#FFFFFF",
        "padding": "6rem 2rem",
        "textAlign": "center",
        "title": {
          "fontSize": "3.75rem",
          "fontWeight": 700,
          "lineHeight": 1.1,
          "marginBottom": "1.5rem"
        },
        "subtitle": {
          "fontSize": "1.25rem",
          "fontWeight": 400,
          "opacity": 0.9,
          "fontStyle": "italic"
        }
      },
      "button": {
        "primary": {
          "background": "#FFFFFF",
          "color": "#7C3AED",
          "padding": "0.75rem 2rem",
          "borderRadius": "9999px",
          "fontWeight": 600,
          "fontSize": "1rem",
          "border": "none",
          "cursor": "pointer",
          "transition": "all 0.2s ease",
          "shadow": "0 4px 6px -1px rgba(0, 0, 0, 0.1)"
        },
        "secondary": {
          "background": "transparent",
          "color": "#64748B",
          "border": "1px solid #E2E8F0",
          "padding": "0.5rem 1rem",
          "borderRadius": "0.375rem",
          "fontSize": "0.875rem",
          "fontWeight": 500
        }
      },
      "toolbar": {
        "background": "#FFFFFF",
        "border": "1px solid #E2E8F0",
        "borderRadius": "0.5rem",
        "padding": "0.5rem",
        "display": "flex",
        "gap": "0.25rem",
        "alignItems": "center"
      },
      "sidebar": {
        "background": "#FFFFFF",
        "width": "280px",
        "borderRight": "1px solid #E2E8F0",
        "padding": "1rem",
        "height": "100vh"
      },
      "editor": {
        "background": "#FFFFFF",
        "border": "1px solid #E2E8F0",
        "borderRadius": "0.5rem",
        "padding": "2rem",
        "minHeight": "500px",
        "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
        "fontSize": "1rem",
        "lineHeight": 1.6
      },
      "assistant": {
        "background": "#FFFFFF",
        "border": "1px solid #E2E8F0",
        "borderRadius": "0.5rem",
        "padding": "1rem",
        "width": "320px",
        "position": "fixed",
        "right": "1rem",
        "top": "50%",
        "transform": "translateY(-50%)",
        "shadow": "0 10px 15px -3px rgba(0, 0, 0, 0.1)"
      },
      "card": {
        "background": "#FFFFFF",
        "border": "1px solid #E2E8F0",
        "borderRadius": "0.75rem",
        "padding": "1.5rem",
        "shadow": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
        "transition": "all 0.2s ease"
      },
      "input": {
        "background": "#FFFFFF",
        "border": "1px solid #E2E8F0",
        "borderRadius": "0.375rem",
        "padding": "0.5rem 0.75rem",
        "fontSize": "0.875rem",
        "outline": "none",
        "transition": "border-color 0.2s ease",
        "focusBorder": "#7C3AED"
      }
    },
    "layout": {
      "header": {
        "height": "60px",
        "background": "#FFFFFF",
        "borderBottom": "1px solid #E2E8F0",
        "padding": "0 1.5rem",
        "display": "flex",
        "alignItems": "center",
        "justifyContent": "space-between"
      },
      "container": {
        "maxWidth": "1200px",
        "margin": "0 auto",
        "padding": "0 1rem"
      },
      "grid": {
        "display": "grid",
        "gap": "1.5rem",
        "columns": {
          "1": "1fr",
          "2": "repeat(2, 1fr)",
          "3": "repeat(3, 1fr)",
          "sidebar": "280px 1fr"
        }
      }
    },
    "effects": {
      "glassmorphism": {
        "background": "rgba(255, 255, 255, 0.1)",
        "backdropFilter": "blur(10px)",
        "border": "1px solid rgba(255, 255, 255, 0.2)"
      },
      "gradient": {
        "primary": "linear-gradient(135deg, #7C3AED 0%, #A855F7 50%, #EC4899 100%)",
        "light": "linear-gradient(135deg, #F8FAFC 0%, #F1F5F9 100%)",
        "text": "linear-gradient(135deg, #7C3AED 0%, #EC4899 100%)"
      },
      "animation": {
        "fadeIn": "opacity 0.3s ease-in",
        "slideIn": "transform 0.3s cubic-bezier(0.4, 0, 0.2, 1)",
        "scale": "transform 0.2s ease-out"
      }
    },
    "icons": {
      "size": {
        "sm": "16px",
        "md": "20px",
        "lg": "24px",
        "xl": "32px"
      },
      "color": {
        "primary": "#64748B",
        "secondary": "#94A3B8",
        "accent": "#7C3AED"
      }
    },
    "brandElements": {
      "logo": {
        "icon": "ðŸ‘‘",
        "color": "#FFFFFF",
        "fontSize": "1.5rem"
      },
      "tagline": "a doc editor that writes with you",
      "features": [
        "tab, tab, tab",
        "Chat to edit",
        "AI-powered writing suggestions",
        "Real-time collaboration"
      ]
    },
    "responsiveBreakpoints": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px",
      "2xl": "1536px"
    }
  }
}
